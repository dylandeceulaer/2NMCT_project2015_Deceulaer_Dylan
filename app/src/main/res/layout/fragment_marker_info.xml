<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.howest.dylandeceulaer.places.MarkerInfoFragment"
    android:background="#ffffff">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTitle"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:hint="Marker Name"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButtonClose" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonClose"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_margin="10dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/EditTextStraatnaam"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:inputType="textCapSentences"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textViewTitle"
        android:background="@android:color/transparent"

        android:padding="5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewDelete"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/imageButtonClose"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextStraatnaam"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:src="@drawable/custom_marker_home_icon"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/poi"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/custom_marker_poi_icon"
            android:layout_toEndOf="@+id/home" />
    </RelativeLayout>


</RelativeLayout>
