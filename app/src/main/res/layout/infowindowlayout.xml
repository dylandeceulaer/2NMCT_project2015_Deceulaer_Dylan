<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp" android:layout_height="100dp">

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonZoom"
        android:src="@android:drawable/ic_menu_zoom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewMarker"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/custom_marker_home"
        android:layout_margin="10dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewTitel"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewMarker"
        android:layout_toStartOf="@+id/imageButtonZoom"
        android:layout_margin="10dp"
        style="?android:attr/listSeparatorTextViewStyle"
        android:paddingLeft="0dp"
        android:paddingTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textViewAdres"
        android:layout_below="@+id/imageButtonZoom"
        android:layout_alignStart="@+id/textViewTitel" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@android:drawable/ic_menu_directions"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/imageButtonZoom"
        android:layout_alignParentEnd="true" />

</RelativeLayout>